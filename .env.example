# AVA Environment Configuration
# ==============================
# Copy this file to .env and customize for your setup
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your settings

# ============================================================================
# Ollama Configuration
# ============================================================================
# URL where Ollama is running (default: local)
OLLAMA_HOST=http://localhost:11434

# Default model for the Medulla (fast brain)
OLLAMA_MODEL=gemma3:4b

# Model for the Cortex (deep thinking) - optional, uses layer paging
# OLLAMA_CORTEX_MODEL=qwen2.5:32b

# ============================================================================
# AVA Server Configuration
# ============================================================================
# Host to bind the API server (use 0.0.0.0 for network access)
AVA_HOST=127.0.0.1

# Port for the API server
AVA_PORT=8085

# Enable debug mode (more verbose logging)
AVA_DEBUG=false

# ============================================================================
# GPU & Performance Settings
# ============================================================================
# Maximum GPU power usage (percentage) - prevents thermal throttling
# Recommended: 15 for RTX A2000 4GB, 30-50 for higher-end cards
AVA_MAX_GPU_POWER_PERCENT=15

# Enable simulation mode (no actual AI inference - for testing)
AVA_SIMULATION_MODE=false

# Maximum tokens per response
AVA_MAX_TOKENS=2048

# ============================================================================
# Memory & Context
# ============================================================================
# Maximum conversation turns to keep in memory
AVA_MAX_MEMORY_TURNS=50

# Enable Titans neural memory (test-time learning)
AVA_TITANS_ENABLED=true

# ============================================================================
# Search & Web
# ============================================================================
# Enable Search-First paradigm (web search before answering)
AVA_SEARCH_FIRST=true

# Minimum sources required for factual claims
AVA_MIN_SOURCES=3

# ============================================================================
# Security
# ============================================================================
# Require confirmation for system commands
AVA_REQUIRE_COMMAND_CONFIRMATION=true

# Enable ethical constraints (content filtering)
AVA_ETHICAL_CONSTRAINTS=true

# ============================================================================
# Logging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
# LOG_FILE=logs/ava.log

# ============================================================================
# Development
# ============================================================================
# Enable hot reload for development
AVA_HOT_RELOAD=false

# Enable profiling
AVA_PROFILING=false
