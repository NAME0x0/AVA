{
  "name": "ava-ui",
  "version": "4.1.0",
  "description": "AVA Neural Interface - Cortex-Medulla Architecture",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:wait": "wait-on http://localhost:3000 -t 30000",
    "tauri:dev": "concurrently -k \"npm run dev\" \"npm run dev:wait && tauri dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tauri": "tauri",
    "tauri:build": "tauri build",
    "build:sidecar": "cd .. && python scripts/build_sidecar.py",
    "build:sidecar:clean": "cd .. && python scripts/build_sidecar.py --clean",
    "tauri:build:full": "npm run build:sidecar && tauri build",
    "tauri:build:release": "npm run build:sidecar:clean && tauri build --release",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "@tauri-apps/api": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.5.5",
    "three": "^0.160.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "@tauri-apps/cli": "^1.6.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@types/three": "^0.160.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
