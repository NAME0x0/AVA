{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "AVA",
    "version": "4.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:8085/**",
          "http://127.0.0.1:8085/**",
          "http://localhost:8086/**",
          "http://127.0.0.1:8086/**",
          "http://localhost:8087/**",
          "http://127.0.0.1:8087/**",
          "http://localhost:11434/**",
          "http://127.0.0.1:11434/**",
          "http://localhost:3000/**",
          "http://127.0.0.1:3000/**",
          "https://github.com/**",
          "https://api.github.com/**"
        ]
      },
      "shell": {
        "open": true,
        "execute": false,
        "sidecar": false,
        "scope": []
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "startDragging": true,
        "setSize": true,
        "setPosition": true
      },
      "clipboard": {
        "writeText": true,
        "readText": true
      },
      "notification": {
        "all": true
      },
      "process": {
        "exit": true,
        "relaunch": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "scope": ["$APP/**", "$RESOURCE/**"],
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "exists": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "© 2024-2026 AVA Project",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ava.neural-interface",
      "longDescription": "AVA Neural Interface - A unified, portable AI assistant with biomimetic Cortex-Medulla architecture. Single executable, no Python required.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "config/*"
      ],
      "shortDescription": "AVA - Unified Neural Interface",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "installMode": "currentUser",
          "license": null,
          "compression": "lzma"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/NAME0x0/AVA/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzQjE3Rjk0RDBCMTEzRUQKUldUdEU3SFFsSCt4ZzQ3SHRkMnRSSDRuakVMaVZOSnBWcDFQMUd3RExmelZPZFFmRWNHYk0vY1gK"
    },
    "windows": [
      {
        "title": "AVA • Neural Interface",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true,
        "visible": true,
        "focus": true,
        "skipTaskbar": false
      }
    ]
  }
}
